<Window x:Class="DesktopApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Height="Auto" Width="350"
        Background="White">

    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="20">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок Вход в систему -->
            <TextBlock Grid.Row="0" Text="Вход в систему" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"/>

            <!-- Поле для логина -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Логин:" 
                           Width="80" 
                           VerticalAlignment="Center"/>
                <TextBox Name="txtLogin" 
                         Width="200" 
                         Height="25"/>
            </StackPanel>

            <!-- Поле для пароля -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Пароль:" 
                           Width="80" 
                           VerticalAlignment="Center"/>
                <PasswordBox Name="txtPassword" 
                             Width="200" 
                             Height="25"/>
            </StackPanel>

            <!-- Сообщение об ошибке -->
            <TextBlock Grid.Row="3" Name="lblError" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Кнопки Войти и Отмена -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,10">
                <Button Content="Войти" 
                        Click="LoginButton_Click" 
                        Width="80" 
                        Height="30" 
                        Margin="0,0,10,0"/>
                <Button Content="Отмена" 
                        Click="CancelButton_Click" 
                        Width="80" 
                        Height="30"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>