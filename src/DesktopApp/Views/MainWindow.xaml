<Window x:Class="DesktopApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:DesktopApp.Converters"
        Title="Каталог товаров" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="1000"
        Background="#F5F5F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToBrushConverter x:Key="BoolToBrushConverter"/>

        <!-- Стиль для карточки товара -->
        <Style TargetType="Border" x:Key="ProductCardStyle">
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Стиль для кнопок сортировки -->
        <Style TargetType="Button" x:Key="SortButtonStyle">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Стиль для чекбоксов -->
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка с названием и информацией о пользователе -->
        <Border Grid.Row="0" Background="White" Padding="15" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Каталог товаров" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding UserInfo}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0"/>
                    <Button Content="Выход" 
                            Click="LogoutButton_Click" 
                            Width="80" 
                            Padding="8,4"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель фильтров и управления -->
        <Border Grid.Row="1" Background="White" Padding="15" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Верхняя строка: поиск, фильтры, цена -->
                <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                    <!-- Поиск -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Поиск по описанию:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"/>
                        <TextBox Name="txtSearch" 
                                 Width="200" 
                                 Height="25"
                                 TextChanged="txtSearch_TextChanged"/>
                    </StackPanel>

                    <!-- Производитель -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Производитель:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"/>
                        <ComboBox Name="cbManufacturer" 
                                  Width="150" 
                                  Height="25"
                                  SelectionChanged="FilterChanged"/>
                    </StackPanel>

                    <!-- Цена до -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Цена до:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"/>
                        <TextBox Name="txtMaxPrice" 
                                 Width="80" 
                                 Height="25"
                                 TextChanged="FilterChanged"/>
                        <TextBlock Text="руб." 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- Макс цена -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Макс. цена:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"/>
                        <TextBlock Name="lblMaxPrice" 
                                   Text="0" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="руб." 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,0,0"/>
                    </StackPanel>
                </WrapPanel>

                <!-- Нижняя строка: чекбоксы и кнопки -->
                <WrapPanel Grid.Row="1">
                    <!-- Чекбоксы -->
                    <CheckBox Content="Только со скидкой" 
                              Name="cbDiscounted" 
                              Checked="FilterChanged" 
                              Unchecked="FilterChanged"/>

                    <CheckBox Content="Только в наличии" 
                              Name="cbInStock" 
                              Checked="FilterChanged" 
                              Unchecked="FilterChanged"/>

                    <!-- Кнопки управления (только для менеджеров/админов) -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="20,0,0,0"
                                Visibility="{Binding IsManagerOrAdmin, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button Content="Добавить" 
                                Name="btnAdd" 
                                Click="AddProduct_Click" 
                                Width="100" 
                                Margin="0,0,5,0"/>
                        <Button Content="Редактировать" 
                                Name="btnEdit" 
                                Click="EditProduct_Click" 
                                Width="100" 
                                Margin="0,0,5,0"/>
                        <Button Content="Удалить" 
                                Name="btnDelete" 
                                Click="DeleteProduct_Click" 
                                Width="100"/>
                    </StackPanel>
                </WrapPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель сортировки -->
            <Border Grid.Row="0" Background="#F8F8F8" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
                <WrapPanel>
                    <TextBlock Text="Сортировка:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>

                    <Button Content="По названию ↑" 
                            Click="SortByNameAsc_Click" 
                            Style="{StaticResource SortButtonStyle}"/>

                    <Button Content="По названию ↓" 
                            Click="SortByNameDesc_Click" 
                            Style="{StaticResource SortButtonStyle}"/>

                    <Button Content="По поставщику ↑" 
                            Click="SortBySupplierAsc_Click" 
                            Style="{StaticResource SortButtonStyle}"/>

                    <Button Content="По поставщику ↓" 
                            Click="SortBySupplierDesc_Click" 
                            Style="{StaticResource SortButtonStyle}"/>

                    <Button Content="По цене ↑" 
                            Click="SortByPriceAsc_Click" 
                            Style="{StaticResource SortButtonStyle}"/>

                    <Button Content="По цене ↓" 
                            Click="SortByPriceDesc_Click" 
                            Style="{StaticResource SortButtonStyle}"/>

                    <Button Content="Применить фильтры" 
                            Click="ApplyFilters_Click" 
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"
                            Margin="15,0,0,0"/>
                </WrapPanel>
            </Border>

            <!-- Контейнер для списка товаров или сообщения -->
            <Grid Grid.Row="1">
                <!-- Список товаров в столбик -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="15">
                    <ItemsControl Name="itemsProducts">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ProductCardStyle}"
                                        MouseLeftButtonDown="ProductItem_MouseLeftButtonDown">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Изображение товара -->
                                        <Border Grid.Column="0" 
                                                Margin="0,0,15,0" 
                                                Width="120" 
                                                Height="120"
                                                Background="#F5F5F5">       
                                            <Image Stretch="Uniform">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <!-- Заглушка через Binding -->
                                                        <Setter Property="Source" 
                                                                Value="{Binding DefaultImagePath}"/>
                                                        <Style.Triggers>
                                                            <!-- Если есть фото, показываем его -->
                                                            <DataTrigger Binding="{Binding HasPhoto}" Value="true">
                                                                <Setter Property="Source" 
                                                                        Value="{Binding PhotoPath}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </Border>

                                        <!-- Информация о товаре -->
                                        <StackPanel Grid.Column="1">
                                            <!-- Категория | Название -->
                                            <TextBlock FontSize="16" 
                                                       FontWeight="Bold" 
                                                       Margin="0,0,0,5">
                                                <Run Text="{Binding CategoryName}"/>
                                                <Run Text=" | "/>
                                                <Run Text="{Binding Name}"/>
                                            </TextBlock>

                                            <!-- Артикул -->
                                            <TextBlock Text="{Binding Article}" 
                                                       FontSize="12"
                                                       Foreground="#666666"
                                                       Margin="0,0,0,5"/>

                                            <!-- Описание -->
                                            <TextBlock Text="{Binding Description}" 
                                                       TextWrapping="Wrap" 
                                                       Margin="0,0,0,10"
                                                       FontStyle="Italic"
                                                       Foreground="#666666"
                                                       MaxHeight="40"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <!-- Детали товара -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Производитель -->
                                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="Производитель:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding ManufacturerName}"/>
                                                </StackPanel>

                                                <!-- Поставщик -->
                                                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="Поставщик:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding SupplierName}"/>
                                                </StackPanel>

                                                <!-- Цена -->
                                                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="Цена:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock>
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" 
                                                                            Value="{Binding Price, StringFormat={}{0:N2} руб.}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding HasDiscount}" Value="true">
                                                                            <Setter Property="Foreground" Value="#999999"/>
                                                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                            <Setter Property="Margin" Value="0,0,5,0"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>

                                                        <!-- Цена со скидкой -->
                                                        <TextBlock Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                   Foreground="#E53935" 
                                                                   FontWeight="Bold">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0:N2} руб.">
                                                                    <Binding Path="DiscountedPrice"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Единица измерения -->
                                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="Единица измерения:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding Unit}"/>
                                                </StackPanel>

                                                <!-- Количество на складе -->
                                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="Количество:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding StockQuantity}" 
                                                               Foreground="{Binding InStock, Converter={StaticResource BoolToBrushConverter}}"/>
                                                </StackPanel>

                                                <!-- Скидка -->
                                                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                                    <TextBlock Text="Скидка:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding Discount, StringFormat={}{0}%}" 
                                                               Foreground="#E53935"
                                                               FontWeight="Bold"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Кнопка "Выбор для заказа" -->
                                        <StackPanel Grid.Column="2" 
                                                    VerticalAlignment="Bottom" 
                                                    HorizontalAlignment="Right">
                                            <Button Content="Выбор для заказа" 
                                                    Padding="10,6"
                                                    Background="#2196F3"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Visibility="{Binding InStock, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Сообщение при отсутствии товаров -->
                <TextBlock Name="txtNoProducts" 
                           Text="Товары не найдены" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="#999999"
                           Visibility="Collapsed"/>
            </Grid>
        </Grid>
    </Grid>
</Window>