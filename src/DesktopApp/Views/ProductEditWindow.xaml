<Window x:Class="DesktopApp.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товар" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Width="500"
        MinHeight="600"
        Background="White">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" Text="Товар" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Артикул -->
            <TextBlock Grid.Row="1" Text="Артикул:" 
                       FontSize="14" FontWeight="SemiBold" 
                       Margin="0,0,0,5"/>
            <TextBox Grid.Row="2" Name="txtArticle" 
                     Margin="0,0,0,15"
                     Height="25"/>

            <!-- Название -->
            <TextBlock Grid.Row="3" Text="Название:" 
                       FontSize="14" FontWeight="SemiBold" 
                       Margin="0,0,0,5"/>
            <TextBox Grid.Row="4" Name="txtName" 
                     Margin="0,0,0,15"
                     Height="25"/>

            <!-- Категория и производитель в двух колонках -->
            <Grid Grid.Row="5" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Категория -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Категория:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <ComboBox Name="cbCategory" 
                              Height="25"/>
                </StackPanel>

                <!-- Производитель -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Производитель:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <ComboBox Name="cbManufacturer" 
                              Height="25"/>
                </StackPanel>
            </Grid>

            <!-- Цена и скидка в двух колонках -->
            <Grid Grid.Row="6" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Цена -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Цена:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <TextBox Name="txtPrice" 
                             Height="25"/>
                </StackPanel>

                <!-- Скидка -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Скидка (%):" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <TextBox Name="txtDiscount" 
                             Height="25"/>
                </StackPanel>
            </Grid>

            <!-- Описание -->
            <TextBlock Grid.Row="7" Text="Описание:" 
                       FontSize="14" FontWeight="SemiBold" 
                       Margin="0,0,0,5"/>
            <TextBox Grid.Row="8" Name="txtDescription" 
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,15"/>

            <!-- Изображение -->
            <TextBlock Grid.Row="9" Text="Изображение:" 
                       FontSize="14" FontWeight="SemiBold" 
                       Margin="0,0,0,10"/>

            <Grid Grid.Row="10" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Name="imgPreview" 
                       Width="120" Height="120" 
                       Margin="0,0,15,0"
                       Stretch="Uniform"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Button Content="Выбрать изображение" 
                            Click="SelectImage_Click" 
                            Width="150" Height="30"
                            Margin="0,0,0,10"/>
                    <TextBlock Text="Рекомендуемый размер: 400x400px" 
                               FontSize="11" 
                               Foreground="#666666"/>
                </StackPanel>
            </Grid>

            <!-- Сообщение об ошибке -->
            <TextBlock Grid.Row="11" Name="lblError" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"
                       MinHeight="40"
                       VerticalAlignment="Center"/>

            <!-- Кнопки Сохранить и Отмена -->
            <StackPanel Grid.Row="12" Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="Сохранить" 
                        Click="Save_Click" 
                        Width="100" Height="30" 
                        Margin="0,0,10,0"
                        Background="#4CAF50"
                        Foreground="White"/>
                <Button Content="Отмена" 
                        Click="Cancel_Click" 
                        Width="100" Height="30"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>