<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Магазин товаров</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Наши стили -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Иконка сайта -->
    <link rel="icon" href="~/images/Icon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="~/images/Icon.ico" type="image/x-icon" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Логотип и название -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="~/images/Icon.png" alt="Логотип" class="logo me-2" height="40" />
                    <span>Магазин товаров</span>
                </a>

                <!-- Кнопка для мобильных устройств -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Переключить навигацию">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Основное меню -->
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">
                                <i class="bi bi-house-door"></i> Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Products/Index">
                                <i class="bi bi-shop"></i> Товары
                            </a>
                        </li>

                        <!-- Меню для авторизованных пользователей -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Orders/Index">
                                    <i class="bi bi-clipboard-check"></i> Мои заказы
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Правая часть меню -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Меню пользователя -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#"
                                   id="userDropdown" role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>
                                    <span>@Context.Session.GetString("UserFullName")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <span class="dropdown-item-text">
                                            <small class="text-muted">
                                                <i class="bi bi-person-badge"></i>
                                                @Context.Session.GetString("UserRole")
                                            </small>
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-page="/Logout" method="post" class="px-3 py-2">
                                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                                <i class="bi bi-box-arrow-right"></i> Выйти
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- Для неавторизованных пользователей -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Войти
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        <div class="container">
            <!-- Отображение временных сообщений (TempData) -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                </div>
            }

            <!-- Основное содержимое страницы -->
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted mt-5">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2024 - Магазин товаров. Все права защищены.
                </div>
                <div class="col-md-6 text-end">
                    <small>Система управления товарами и заказами</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery (если нужен для валидации) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery Validation (для форм) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- Наши скрипты -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Секция для скриптов отдельных страниц -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>